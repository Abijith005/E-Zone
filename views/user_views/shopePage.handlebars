				<li class="active"><i class="fa fa-th"></i></li>
				<li><a href="#"><i class="fa fa-th-list"></i></a></li>
			</ul>
		</div>
		<!-- /store top filter -->
	</div>
	<!-- store products -->
	<div class="container">
		<div id="newProducts" class="row">
			{{#each products}}
			<div class="col-md-4 col-xs-6">
				<div class="product">
					<a href="/singleProductPage/{{this._id}}">
						<div class="product-img">
							<img style="height:150px; object-fit:contain" src="/images/{{this.image.[0].filename}}"
								alt="">
						</div>
					</a>
					<div class="product-body" style="height: 14rem;">
						<p class="product-category">{{this.category}}</p>
						<h3 class="product-name"><a href="#">{{this.product_name}}</a></h3>
						<h3 class="product-name">{{this.brandName}}</h3>
						<h4 class="product-price">₹{{this.price}}/- <del
								class="product-old-price">₹{{this.price}}/-</del>
						</h4>
						<div class="product-btns" id="whishListButtonDiv{{this._id}}">
							{{#unless this.whishList}}
							<button onclick="addToWhishList('{{this._id}}')" class="add-to-wishlist"><i
									class="fa fa-heart-o"></i><span class="tooltipp">add to
									wishlist</span></button>
							{{else}}
							<button onclick="removeFromWhishList('{{this._id}}')" class="add-to-wishlist"><i
									style="color: red;" class="fa fa-heart" aria-hidden="true"></i></i></span></button>
							{{/unless}}
							<button onclick="window.location.href='/singleProductPage/{{this._id}}'"
								class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick
									view</span></button>
						</div>
					</div>
					<div class="add-to-cart text-center">

						<button onclick="addToCart('{{this._id}}')" class="add-to-cart-btn mt-4 mb-2"><i
								class="fa fa-shopping-cart"></i> add to
							cart</button>
					</div>
				</div>
			</div>
			{{/each}}
		</div>

		<div class="col-lg-12">
			<nav aria-label="Page navigation example" class="text-center">
				<ul id="pageDiv" class="pagination" style="justify-content: center;">
					{{#each pagination}}
					<li class="page-item"><a class="page-link" onclick="paginate('{{inc @index}}')">{{inc @index}}</a></li>
					{{/each}}
				</ul>
			</nav>
		</div>
	</div>
