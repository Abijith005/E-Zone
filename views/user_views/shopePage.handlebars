				</ul>
			</div>
		</div>
		<!-- /TOP HEADER -->

		<!-- MAIN HEADER -->
		<div id="header">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row align-items-center">
					<!-- LOGO -->
					<div class="col-md-2">
						<div class="header-logo ">
							<a href="#" class="logo">
								<h1 class="font-weight-bold" style="color: #ffff;">E-<font color="#FFD523">Zone</font>

								</h1>

							</a>
						</div>
					</div>
					<!-- /LOGO -->

					<!-- SEARCH BAR -->
					<div class="col-md-6">
						<div class="header-search">
							<form action="/productList" onsubmit="event.preventDefault()" method="post">
								<input class="input"
									style="border-top-left-radius:2rem;border-bottom-left-radius:2rem; width: 80%;"
									type="text" id="searchInput" name="searchInput" placeholder="Search here">
								<button onclick="searchProduct()" class="search-btn">Search</button>
							</form>
						</div>
					</div>
					<!-- /SEARCH BAR -->

					<!-- ACCOUNT -->
					{{#if userName}}
					<div class="col-md-3 clearfix">
						<div class="header-ctn">
							<!-- Wishlist -->

							<div>
								<a href="/getWhishList">
									<i class="fa fa-heart-o"></i>
									<span>Your Wishlist</span>
									<div id="whishListQuantity" class="qty">{{quantities.user_whishList}}</div>

								</a>
							</div>
							<!-- /Wishlist -->

							<!-- Cart -->


							<div class="dropdown">
								<a href="/cart" aria-expanded="true">
									<i class="fa fa-shopping-cart"></i>
									<span>Your Cart</span>
									<div id="cartQuantity" class="qty">{{quantities.user_cart}}</div>
								</a>
							</div>
							<!-- /Cart -->

							<!-- Menu Toogle -->
							<div class="menu-toggle">
								<a href="#">
									<i class="fa fa-bars"></i>
									<span>Menu</span>
								</a>
							</div>
							<!-- /Menu Toogle -->

						</div>
					</div>
					{{/if}}
					<div class="col-1 ms-auto">
						<div class="dropdown">
							{{#unless userName}}
							<button class="btn btn-secondary text-white dropdown-toggle" type="button"
								id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
								aria-expanded="false"><i class="fa fa-user-o"></i> Account</button>
							{{else}}
							<button class="btn btn-secondary text-white dropdown-toggle" type="button"
								id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
								aria-expanded="false">{{userName}}</button>
							{{/unless}}


							<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
								{{#unless userName}}
								<a class="dropdown-item" href="/user_login">Login</a>
								{{else}}
								<a class="dropdown-item" href="/user_profile">Profile</a>
								<a class="dropdown-item" href="/user_logOut">Log Out</a>
								{{/unless}}
							</div>
						</div>
					</div>

					<!-- /ACCOUNT -->
				</div>
				<!-- row -->
			</div>
			<!-- container -->
		</div>
		<!-- /MAIN HEADER -->
	</header>
	<!-- /HEADER -->

	<!-- NAVIGATION -->
	<nav id="navigation">
		<!-- container -->
		<div class="container">
			<!-- responsive-nav -->

			<div id="responsive-nav">
				<!-- NAV -->
				<ul class="main-nav nav navbar-nav flex-row">
					<li class="active"><a href="/home">Home</a></li>
					<li><a onclick="allProducts()">All Products</a></li>
