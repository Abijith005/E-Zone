    <section class="pt-5 pb-5">
      <div class="container">
        <div class="row w-100">
            <div class="col-lg-12 col-md-12 col-12">
                <h3 class="display-5 mb-2">Shopping Cart</h3>
                <p class="mb-5">
                    <i class="text-info font-weight-bold">3</i> items in your cart</p>
                <table id="shoppingCart" class="table table-condensed table-responsive">
                    <thead>
                        <tr>
                            <th style="width:30%">Product</th>
                            <th style="width:30%">Description</th>
                            <th style="width:12%">Price</th>
                            <th style="width:10%">Quantity</th>
                            <th style="width:16%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each cartData.user_cart}}
                        <tr>
                            <td data-th="Product">
                                <div class="row">
                                    <div class="col-md-6 col-12 ">
                                        <img  src="images/{{this.image.image.[0].filename}}" alt="" class="img-fluid  ">
                                    </div>
                                  
                                </div>
                            </td>
                            <td>  
                              <h5>{{this.product_Details}}</h5>
                          </td>
                            <td data-th="Price">{{this.price}}</td>
                            <td data-th="Quantity">
                                <input type="number"  min="1" max="10" class="form-control form-control-lg text-center" value="{{this.quantity}}">
                            </td>
                            <td class="actions" data-th="">
                                <div class="text-right">
            
                                    <button class="btn btn-white border-secondary bg-white btn-md mb-2">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
                <div class="float-right text-right">
                    <h4>Subtotal:</h4>
                    <h1>24000.00</h1>
                </div>
            </div>
        </div>
        <div class="row mt-4 d-flex align-items-center">
