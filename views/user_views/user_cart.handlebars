  <div class="search-bar d-block d-md-none bg-dark">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <form class="form-inline mb-3 mx-auto">
            <input class="form-control" type="search" placeholder="Search for products..." aria-label="Search"  style="width: 318px;">
            <button  style="background-color: #F26522;" class="btn " type="submit"><i class="bx bx-search"></i></button>
          </form>
        </div>
      </div>
    </div>
