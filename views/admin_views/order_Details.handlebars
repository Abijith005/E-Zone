  <style>
    tr,
    th,
    td {
      color: rgb(8, 8, 8);
    }
  </style>
  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No.</th>
          <th scope="col">customer Name</th>
          <th scope="col">Product Name</th>
          <th scope="col">Category</th>
          <th scope="col">Order Date</th>
          <th scope="col">Quantity</th>
          <th scope="col">Total Amount</th>
          <th scope="col">Order Status</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each result}}
        {{#each orders}}
        <tr>
          <td scope="row">{{@index}}</td>
          <td>{{../name}}</td>
          <td>{{this.productName}}</td>
          <td>{{this.category}}</td>
          <td>{{this.orderDate}}</td>
          <td>{{this.quantity}}</td>
          <td>â‚¹: {{this.totalAmount}} /-</td>
          {{#if this.cancelStatus}}
          <td class="text-danger">Cancelled</td>
          {{else}}
          <td class="text-success">{{this.orderStatus}}</td>
          {{/if}}
          <td>

            {{#unless this.cancelStatus}}
            <div id="container">
              <div id="menu-wrap">
                <input type="checkbox" class="toggler" />
                <div class="dots">
                  <div></div>

                </div>
                <div class="menu">
                  <div>
                    <ul>
                      {{#unless this.shipped}}
                      <li><a
                          href="adminOrderUpdate/{{this.order_id}}/{{../_id}}/{{this.product_id}}/{{this.quantity}}/shipped"
                          class="link">Shipped</a></li>
                      {{/unless}}
                      {{#unless this.delivered}}
                      <li><a
                          href="adminOrderUpdate/{{this.order_id}}/{{../_id}}/{{this.product_id}}/{{this.quantity}}/delivered"
                          class="link">Delivered</a></li>
                      {{#unless this.cancelStatus}}
                      <li><a
                          href="adminOrderUpdate/{{this.order_id}}/{{../_id}}/{{this.product_id}}/{{this.quantity}}/cancelled"
                          class="link">cancel</a></li>
                      {{/unless}}
                      {{/unless}}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            {{/unless}}


            {{!-- <a href="adminCancelOrder/{{this.order_id}}/{{../_id}}/{{this.product_id}}/{{this.quantity}}"><button
                class="btn btn-danger rounded-pill">cancel</button></a> --}}
          </td>
          {{/each}}
        </tr>{{/each}}
      </tbody>
    </table>
  </div>

