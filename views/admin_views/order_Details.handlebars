  <style>
    tr,
    th,
    td {
      color: rgb(8, 8, 8);
    }
  </style>
  <nav class="navbar navbar-expand-lg navbar-light bg-light text-center">

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        </li>
      </ul>
      <div class="row">
        <div class="col-lg-4sm-4 ">
          <a href="/create"><button class="btn btn-success mr-auto" style="margin-right: auto;">Create</button></a>
        </div>
        <form class="form-inline my-2 my-lg-0" action="/admin/userSearch/" role="search" type="submit" method="post">
          <div class="col-lg-4 sm-4">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" name="name" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </div>
        </form>
        <div class="col-lg-4 sm-4">
          <a href="admin-logout"><button class="btn btn-danger">Log Out</button></a>
        </div>



      </div>
    </div>
  </nav>
  <div>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No.</th>
          <th scope="col">customer Name</th>
          <th scope="col">Product Name</th>
          <th scope="col">Category</th>
          <th scope="col">Order Date</th>
          <th scope="col">Quantity</th>
          <th scope="col">Total Amount</th>
          <th scope="col">Order Status</th>
          <th scope="col">Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each result}}
        {{#each orders}}
        <tr>
          <td scope="row">{{@index}}</td>
          <td>{{../name}}</td>
          <td>{{this.productName}}</td>
          <td>{{this.category}}</td>
          <td>{{this.orderDate}}</td>
          <td>{{this.quantity}}</td>
          <td>â‚¹: {{this.totalAmount}} /-</td>
          <td>{{this.orderStatus}}</td>
          <td><a href="adminCancelOrder/{{this.order_id}}/{{../_id}}"><button class="btn btn-danger rounded-pill">cancel</button></a></td>
          {{/each}}
        </tr>{{/each}}
      </tbody>
    </table>
